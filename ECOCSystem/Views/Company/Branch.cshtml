                                </tr>
                            </thead>
                            <tbody>
                                @*<tr class="odd">
                                        <td class="sorting_1 dtr-control">Gecko</td>
                                        <td>Mozilla 1.5</td>
                                        <td class="">Win 95+ / OSX.1+</td>
                                        <td>1.5</td>
                                        <td>A</td>
                                    </tr>*@
                                @for (int i = 0; i < Model.BranchList.Count(); i++)
                                {
                                    <tr>
                                        <td style="width: 14.28%;">
                                            @Html.DisplayFor(o => Model.BranchList[i].CompanyName)
                                        </td>
                                        <td style="width: 14.28%;">
                                            @Html.DisplayFor(o => Model.BranchList[i].BranchName)
                                        </td>
                                        <td style="width: 14.28%;">
                                            @Html.DisplayFor(o => Model.BranchList[i].Address)
                                        </td>
                                        <td style="width: 14.28%;">
                                            @Html.DisplayFor(o => Model.BranchList[i].EmailAddress)
                                        </td>
                                        
                                        <td style="width: 14.28%;">
                                            @Html.DisplayFor(o => Model.BranchList[i].BusinessPhone)
                                        </td>
                                        <td style="width: 14.28%;">
                                            @Html.DisplayFor(o => Model.BranchList[i].MobilePhone)
                                        </td>
