                            </table>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="modal-companyInfo" style="display: none;" aria-hidden="true">
                    <div class="modal-dialog modal-xl">

                        @{
                            Html.RenderPartial("_CompanyInfo", Model.CompanyInfo, new ViewDataDictionary() { TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "CompanyInfo" } });
                        }
                    </div>

                </div>
            }

        </div>
    </div>




  
</section>
<script>
    $(document).ready(function () {




        $('#addCompany').on('click', function () {
            $('#companyOption').empty();
            $('#companyOption').append(`<button type="submit" name="submit" value="ADDCOMPANY" class="btn btn-success">Save</button> `)

            //$('#submit_Address').on('click', function () {
            //    submitForm("ADDADDRESS");
            //});
          


        });
        $('.editCompany').on('click', function () {
            $('#companyOption').empty();
            $('#companyOption').append(`<button type="submit" name="submit" value="EDITCOMPANY" class="btn btn-success">Update</button> `)

            let CompanyID = $(this).attr('CompanyID');

        /*    console.log(CompanyID)*/
