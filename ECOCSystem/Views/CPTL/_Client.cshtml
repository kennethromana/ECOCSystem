@using ECOCSystem.Model
@model ClientModel

@using (Html.BeginForm("Index", "User", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "MV_Form" }))
{
    <section class="row mt-4 pb-4">
        <div class="col-12 col-sm-4" data-select2-id="55">
            <div class="form-group" data-select2-id="54">
                <h6 class=""><b>Title</b></h6>
                <select class="form-control select2 select2-danger select2-hidden-accessible" data-dropdown-css-class="select2-danger" style="width: 100%;" data-select2-id="12" tabindex="-1" aria-hidden="true">
                    <option selected="selected" data-select2-id="14">Mr.</option>
                    <option data-select2-id="56">Ms.</option>
                    <option data-select2-id="57">Coporate with Assignee</option>
                    <option data-select2-id="56">Individual</option>
                </select>
            </div>
        </div>
    </section>
    <section class="row pb-4">
        @*<i class="fas fa-2x fa-sync fa-spin"></i>*@
        <div class="form-group col-lg-4">
            @Html.LabelFor(o => o.FirstName)
            <div class="input-group">@Html.TextBoxFor(o => o.FirstName, new { @class = "form-control input-style", placeholder = "First Name" })</div>
            @Html.ValidationMessageFor(o => o.FirstName)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(o => o.LastName)
            <div class="input-group">@Html.TextBoxFor(o => o.LastName, new { @class = "form-control input-style", placeholder = "Last name" })</div>
            @Html.ValidationMessageFor(o => o.LastName)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(o => o.MiddleName)
            <div class="input-group">@Html.TextBoxFor(o => o.MiddleName, new { @class = "form-control input-style", placeholder = "Middle Name" })</div>
            @Html.ValidationMessageFor(o => o.MiddleName)
        </div>
    </section>
    <section class="row pb-4">
        @*<i class="fas fa-2x fa-sync fa-spin"></i>*@
        <div class="form-group col-lg-4">
            @Html.LabelFor(o => o.FirstName)
            <div class="input-group">@Html.TextBoxFor(o => o.FirstName, new { @class = "form-control input-style", placeholder = "Email Address" })</div>
            @Html.ValidationMessageFor(o => o.FirstName)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(o => o.FirstName)
            <div class="input-group">@Html.TextBoxFor(o => o.FirstName, new { @class = "form-control input-style Password", placeholder = "Password" })</div>
            @Html.ValidationMessageFor(o => o.FirstName)
        </div>
    </section>
    <section class="row mb-4 pb-4">
        <div class="col-12 col-sm-4" data-select2-id="55">
            <div class="form-group" data-select2-id="54">
                <h6 class=""><b>User Type</b></h6>
                <select class="form-control select2 select2-danger select2-hidden-accessible" data-dropdown-css-class="select2-danger" style="width: 100%;" data-select2-id="12" tabindex="-1" aria-hidden="true">
                    <option selected="selected" data-select2-id="14">Company Administrator</option>
                    <option data-select2-id="56">Super Admin</option>
                    <option data-select2-id="57">Branch Agent</option>
                    <option data-select2-id="56">Branch Administrator</option>
                </select>
            </div>
        </div>
        <div class="col-12 col-sm-4" data-select2-id="55">
            <div class="form-group" data-select2-id="54">
                <h6 class=""><b>Company</b></h6>
                <select class="form-control select2 select2-danger select2-hidden-accessible" data-dropdown-css-class="select2-danger" style="width: 100%;" data-select2-id="12" tabindex="-1" aria-hidden="true">
                    <option selected="selected" data-select2-id="14">Databridge Asia inc</option>
                    <option data-select2-id="56">Paramount Inc</option>
                    <option data-select2-id="57">Strad Com</option>
                    <option data-select2-id="58">STANDARAD</option>
                    <option data-select2-id="59">GSIS</option>
                </select>
            </div>
        </div>
        <div class="col-12 col-sm-4" data-select2-id="55">
            <div class="form-group" data-select2-id="54">
                <h6 class=""><b>Branch</b></h6>
                <select class="form-control select2 select2-danger select2-hidden-accessible" data-dropdown-css-class="select2-danger" style="width: 100%;" data-select2-id="12" tabindex="-1" aria-hidden="true">
                    <option selected="selected" data-select2-id="14">Main Branch</option>
                    <option data-select2-id="56">NCR</option>
                    <option data-select2-id="57">Makati</option>
                    <option data-select2-id="58">Alabang</option>
                    <option data-select2-id="59">Mandaluyong</option>
                </select>
            </div>
        </div>
    </section>
    <div class="submit-btn">
        @*<button type="button" style="width:200px; font-size:large;" class="btn-lg btn btn-outline-success btn-flat">Save</button>*@
        <button type="button" class="btn btn-success">Save</button>
    </div>
}

